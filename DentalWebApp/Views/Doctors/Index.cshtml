@model IEnumerable<DentalWebApp.Models.Doctor>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create" class="btn btn-primary">Create New</a>
</p>

<div class="row">
    @foreach (var item in Model)
    {
        <div class="col-md-4 mb-4">
            <div class="card">
                <div class="card-body">
                    @if (item.ImageData != null && item.ImageData.Length > 0)
                    {
                        <div class="student-image center">
                            <img src="data:image/png;base64,@Convert.ToBase64String(item.ImageData)" width="150" height="150" class="rounded-circle" />
                        </div>
                    }
                    else
                    {
                        <div class="student-image center">
                            <img src="https://via.placeholder.com/150" width="150" height="150" class="rounded-circle" />
                        </div>
                    }

                    <h5 class="card-title">@item.FirstName @item.LastName</h5>
                    <p class="card-text"><strong>Specialization:</strong> @item.Specialization</p>
                    <p class="card-text"><strong>Phone Number:</strong> @item.PhoneNumber</p>
                    <div class="d-flex justify-content-between">
                        <a asp-action="Edit" asp-route-id="@item.DoctorId" class="btn btn-warning btn-sm">Edit</a>
                        <a asp-action="Details" asp-route-id="@item.DoctorId" class="btn btn-info btn-sm">Details</a>
                        <a asp-action="Delete" asp-route-id="@item.DoctorId" class="btn btn-danger btn-sm">Delete</a>
                    </div>
                </div>
            </div>
        </div>
    }
</div>

