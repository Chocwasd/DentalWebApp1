@model DentalWebApp.Models.DoctorDTO

@{
    ViewData["Title"] = "Edit Doctor";
}

<h1>Edit Doctor</h1>
<hr />

<div class="container">
    <div class="row justify-content-center">
        <div class="col-lg-8 col-md-10 col-sm-12">

            <form asp-action="Edit" enctype="multipart/form-data">

                <!-- Validation Summary -->
                <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

                <!-- Hidden DoctorId -->
                <input type="hidden" asp-for="DoctorId" />

                <!-- First Name Input -->
                <div class="mb-4">
                    <label asp-for="FirstName" class="form-label">First Name</label>
                    <input asp-for="FirstName" class="form-control" />
                    <span asp-validation-for="FirstName" class="text-danger"></span>
                </div>

                <!-- Last Name Input -->
                <div class="mb-4">
                    <label asp-for="LastName" class="form-label">Last Name</label>
                    <input asp-for="LastName" class="form-control" />
                    <span asp-validation-for="LastName" class="text-danger"></span>
                </div>

                <!-- Specialization Input -->
                <div class="mb-4">
                    <label asp-for="Specialization" class="form-label">Specialization</label>
                    <input asp-for="Specialization" class="form-control" />
                    <span asp-validation-for="Specialization" class="text-danger"></span>
                </div>

                <!-- Phone Number Input -->
                <div class="mb-4">
                    <label asp-for="PhoneNumber" class="form-label">Phone Number</label>
                    <input asp-for="PhoneNumber" class="form-control" />
                    <span asp-validation-for="PhoneNumber" class="text-danger"></span>
                </div>

                <!-- Profile Image Upload -->
                <div class="mb-4">
                    <label for="ImageFile" class="form-label">Profile Image</label>
                    <input type="file" name="ImageFile" class="form-control" />
                    <span asp-validation-for="ImageFile" class="text-danger"></span>
                </div>

                <!-- Current Image (Optional) -->
                <div class="mb-4" id="current-image-container">
                    @if (Model.ImageFile != null)
                    {
                        <div class="mb-3">
                            <label class="form-label">Current Image</label><br />
                            <img src="@Model.ImageFile" class="img-fluid" style="max-height: 200px;" />
                        </div>
                    }
                </div>

                <!-- Submit Button -->
                <div class="mb-4">
                    <input type="submit" value="Save Changes" class="btn btn-primary w-100" />
                </div>

            </form>

            <!-- Back to List Button -->
            <div class="mt-3 text-center">
                <a asp-action="Index" class="btn btn-secondary">Back to List</a>
            </div>

        </div>
    </div>
</div>

@section Scripts {
    
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
